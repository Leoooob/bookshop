{
    "name": "bookshop",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "https://github.com/Leoooob/bookshop",
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                },
                "auth": {
                    "kind": "xsuaa"
                },
                "approuter": {
                    "kind": "cloudfoundry"
                }
            }
        }
    },
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": ">=5",
        "express": "^4",
        "hdb": "^0.19.0",
        "@sap/xssec": "^3",
        "passport": "^0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.2",
        "sqlite3": "^5.0.4",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds run",
        "watch-bookshop-catalog": "cds watch --open bookshop-catalog/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy bookshop --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "sapux": [
        "app/bookshop-catalog"
    ]
}